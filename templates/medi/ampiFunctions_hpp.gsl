function addPrimalSplit(curFunction, splitPos)
   my.isAsync = defined(my.curFunction.async)
   my.isInit = defined(my.curFunction.init)

# ignore for non async function
  if(!my.isAsync)
    return
  endif
# ignore for split positions for non init functions
  if(!my.isInit & (SPLIT_POS_PRE_START = my.splitPos | SPLIT_POS_POST_END = my.splitPos))
    return
  endif

# define what is generated
  my.genPack = (my.isInit & SPLIT_POS_PRE_START = my.splitPos) | (!my.isInit & SPLIT_POS_FINISH = my.splitPos)
  my.genUpdate = (my.isInit & SPLIT_POS_FINISH = my.splitPos)
  my.genDelete = (my.isInit & SPLIT_POS_POST_END = my.splitPos) | (!my.isInit & SPLIT_POS_FINISH = my.splitPos)
  my.genName = "finish"
  if(SPLIT_POS_PRE_START = my.splitPos)
    my.genName = "preStart"
  elsif(SPLIT_POS_POST_END = my.splitPos)
    my.genName = "postEnd"
  endif

  if(my.genPack)
>
