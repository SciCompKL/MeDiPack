    generateLoop(my.buffer, my.access)

  # else for an inplece buffer
  if(defined(my.buffer.inplace))
>   } else {
      inplaceBuffer = my.buffer->inplaceBuffer
      generateInplaceLoop(my.buffer, inplaceBuffer, my.access)
>   }
  endif
  if(0 <> my.modifiedCheck)
>   }
  endif

  endRoot(my.buffer)
